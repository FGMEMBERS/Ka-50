<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>shadow.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow1</object-name>
    <object-name>shadow2</object-name>
    <object-name>shadow3</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow1</object-name>
    <object-name>shadow2</object-name>
    <object-name>shadow3</object-name>
  </animation>

  <animation>
    <name>OmbreTotale</name>
    <object-name>shadow1</object-name>
    <object-name>shadow2</object-name>
    <object-name>shadow3</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>OmbreTotale</object-name>
    <property>/orientation/pitch-deg</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>OmbreTotale</object-name>
    <property>/orientation/roll-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>OmbreTotale</object-name>
   <property>/position/gear-agl-ft</property>
   <factor> -0.3 </factor>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadow2</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <center>
       <x-m> -0.085 </x-m>
       <y-m>  0.000 </y-m>
       <z-m> -1.417 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadow3</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <center>
       <x-m>  0.167 </x-m>
       <y-m>  0.000 </y-m>
       <z-m> -1.417 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

</PropertyList>

